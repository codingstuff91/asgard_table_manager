{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        }
    },
    "exclude": [
        "app/Http/Middleware/"
    ],
    "notPath": [
        "app/Http/Kernel.php",
        "bootstrap/app.php",
        "app/Exceptions/Handler.php",
        "app/Console/Kernel.php",
        "app/Providers"
    ]
}
